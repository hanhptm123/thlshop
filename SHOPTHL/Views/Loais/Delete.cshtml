@model SHOPTHL.Data.Loai

@{
    ViewData["Title"] = "Delete";
    Layout = "_Admin";
}

<h1>Xác nhận có muốn xóa ?</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên loại : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenloai)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Maloai" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Trở về trang danh sách</a>
    </form>
</div>
