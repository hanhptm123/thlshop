@model SHOPTHL.Data.Diachi

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/ChitietSp.cshtml";
}

<h1 class="text-center mb-4">Bạn có chắc muốn xóa địa chỉ này?</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
   
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">
                    Tên người nhận
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tennguoinhan)
                </dd>
                <dt class="col-sm-3">
                    Số điện thoại
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Sdt)
                </dd>
                <dt class="col-sm-3">
                    Địa chỉ
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Diachi1)
                </dd>
            </dl>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Madiachi" />
                <button type="submit" class="btn btn-danger mr-2">Xóa</button>
                <a asp-action="Diachitheomakh" class="btn btn-secondary">Trở lại</a>
            </form>
        </div>
    </div>
</div>
<div style=" min-height:100px;" class="hero-header"></div>