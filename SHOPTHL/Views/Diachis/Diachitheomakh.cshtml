@model IEnumerable<SHOPTHL.Data.Diachi>
@{
    ViewData["Title"] = "Diachitheomakh";
    Layout = "~/Views/Shared/ProfileUser.cshtml";
}



<div class="mx-auto" style="max-width: 1000px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Địa chỉ của tôi</h1>
        <a asp-action="Create" class="btn btn-primary">+  Thêm địa chỉ mới</a>
    </div>

    <hr />
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th class="text-center">
                    Tên người nhận
                </th>
                <th class="text-center">
                    Số điện thoại
                </th>
                <th class="text-center">
                    Địa chỉ
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tennguoinhan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sdt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diachi1)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Madiachi" class="btn btn-primary">Chỉnh sửa</a> |
                        <a asp-action="Delete" asp-route-id="@item.Madiachi" class="btn btn-danger">Xóa địa chỉ</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div style=" min-height:100px;" class="hero-header"></div>