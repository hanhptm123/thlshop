@model IEnumerable<SHOPTHL.Data.Ptvanchuyen>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Danh sách các phương thức vận chuyển đang sử dụng</h5>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm phương thức vận chuyển mới</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Tên phương thức vận chuyển
                </th>
                <th>
                    Phí vận chuyển
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tenptvc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phivc)
                    </td>
                    <td>
                            <a asp-action="Edit" asp-route-id="@item.Maptvc" class="btn btn-warning">
                                <i class="fas fa-edit"></i> <!-- Biểu tượng chỉnh sửa -->
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Maptvc" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> <!-- Biểu tượng xóa -->
                            </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
