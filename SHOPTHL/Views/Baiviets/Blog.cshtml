@{
	ViewData["Title"] = "Blog";
	Layout = "~/Views/Shared/Shop.cshtml";
}

@model IEnumerable<SHOPTHL.Data.Baiviet>
@{
    int count = 1;
    // count++;
}
<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/images/bg-02.jpg');">
    <h2 class="ltext-105 cl0 txt-center" style="font-family: Arial;">
		Bài viết
	</h2>
</section>

<!-- Content page -->
<section class="bg0 p-t-62 p-b-60">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-9 p-b-80">
				<div class="p-r-45 p-r-0-lg">
                    @foreach (var item in Model)
                    {
                        <!-- item blog -->
                        <div class="p-b-63">
                            <a  class="hov-img0 how-pos5-parent">
                                <img src="/images/Blog/@item.Hinhanh" alt="IMG-BLOG">
                                <div class="flex-col-c-m size-123 bg9 how-pos5">
                                    <span class="stext-109 cl3 txt-center">
                                        @item.Ngaydang
                                    </span>
                                </div>
                            </a>

                            <div class="p-t-32">
                                <h4 class="p-b-15">
                                    <a class="ltext-108 cl2 hov-cl1 trans-04" style="font-family: Arial;">
                                        @item.Tenbaiviet
                                    </a>
                                </h4>

                                <p class="stext-117 cl6" style="font-family: Arial;">
                                    @item.Noidung
                                </p>

                                <div class="flex-w flex-sb-m p-t-18">
                                    <span class="flex-w flex-m stext-111 cl2 p-r-30 m-tb-10" style="font-family: Arial;">
                                        <span>
                                            <span class="cl4">Đăng bởi: </span> Admin
                                            <span class="cl12 m-l-4 m-r-6">|</span>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        count++;
                    }

				</div>
			</div>
		</div>
	</div>
</section>
