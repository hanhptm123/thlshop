@model SHOPTHL.Data.Sanpham

@{
    ViewData["Title"] = "Details";
    Layout = "_Admin";
}

<h1>Thông tin chi tiết</h1>

<div>
  
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            Tên sản phẩm :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tensp)
        </dd>
        <dt class = "col-sm-2">
            Đơn giá :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dongia)
        </dd>
        <dt class = "col-sm-2">
           Mô tả ngắn :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        
        <dt class = "col-sm-2">
            Phần trăm giảm giá : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MagiamgiaNavigation.Phantramgiam)
        </dd>
        <dt class = "col-sm-2">
            Tên loại :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaloaiNavigation.Tenloai)
        </dd>
        <dt class="col-sm-2">
            Tên thương hiệu : 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathNavigation. Tenth)
        </dd>
        <dt class = "col-sm-2">
           Tên nhà cung cấp :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManccNavigation.Tenncc)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Masp" class="btn btn-warning">Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-info">Trở về trang danh sách</a>
</div>
