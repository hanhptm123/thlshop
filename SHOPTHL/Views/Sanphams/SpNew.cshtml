
@{
    ViewData["Title"] = "SpNew";
    Layout = "~/Views/Shared/Shop.cshtml";
}
@model IEnumerable<SHOPTHL.Data.Sanpham>


@await Component.InvokeAsync("Navbar")

<h1>Sản phẩm mới</h1>
<br />

<div class="row isotope-grid">
    @foreach (var item in Model)
    {

        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
            <div class="block2">
                <div class="block2-pic hov-img0">
                    <img src="~/Image/@item.Hinhanh" alt="Product Image">
                    <span class="new-label">Mới</span> <!-- Add the "new" tag here -->
                </div>
                <!-- Rest of your code -->

                <div class="block2-txt">
                    <div class="product-info">
                        <a href="/Sanphams/CtSp/@item.Masp" class="product-name" style="font-weight: bold; color: #333;">@item.Tensp</a>
                        <div class="price-info">
                            <span class="current-price">Giá hiện tại: @item.Dongia.000đ</span>
                            @if (item.MagiamgiaNavigation != null && item.MagiamgiaNavigation.Phantramgiam != 0)
                            {
                                <span class="discount-rate" style="color: red; font-weight: bold;">-@item.MagiamgiaNavigation.Phantramgiam%</span>
                            }
                        </div>
                        @if (item.MagiamgiaNavigation != null && item.MagiamgiaNavigation.Phantramgiam != 0)
                        {
                            var giaGoc = (item.Dongia * 100) / (100 - item.MagiamgiaNavigation.Phantramgiam);
                            <div class="original-price">Giá gốc: <del>@string.Format("{0:N0}", giaGoc).000đ</del></div>
                        }
                        <div class="rating">
                            @for (int i = 0; i < 5; i++)
                            {
                                <span class="fa fa-star checked"></span>
                            }
                        </div>
                    </div>
                    <div class="wishlist-button">
                        <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                            <img class="icon-heart1 dis-block trans-04" src="~/images/icons/icon-heart-01.png" alt="Add to Wishlist">
                            <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/images/icons/icon-heart-02.png" alt="Added to Wishlist">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    <div style=" min-height:200px;" class="hero-header"></div>
    <style>
        .new-label {
            position: absolute;
            top: 10px; /* Adjust this value as needed */
            right: 10px; /* Adjust this value as needed */
            background-color: #ff0000; /* Background color of the label */
            color: #ffffff; /* Text color of the label */
            padding: 5px 10px; /* Padding around the label */
            border-radius: 5px; /* Border radius to round the corners */
            font-size: 12px; /* Font size of the label */
        }
    </style>
