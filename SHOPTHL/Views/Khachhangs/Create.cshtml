@model SHOPTHL.Data.Khachhang

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/ChitietSp.cshtml";
}
<style>
    /* Customize Bootstrap input fields */
    .form-control {
        margin-bottom: 15px;
    }

    /* Validation styles */
    .needs-validation input:invalid {
        border-color: #dc3545;
    }

        .needs-validation input:invalid:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

    .needs-validation select:invalid {
        border-color: #dc3545;
    }

        .needs-validation select:invalid:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

    .needs-validation textarea:invalid {
        border-color: #dc3545;
    }

        .needs-validation textarea:invalid:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Hồ sơ của tôi</h1>
        <hr />
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tenkh" class="control-label">Họ và tên</label>
                <input asp-for="Tenkh" class="form-control" required />
                <span asp-validation-for="Tenkh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sdt" class="control-label">Số điện thoại</label>
                <input asp-for="Sdt" class="form-control" required />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diachi" class="control-label">Địa chỉ</label>
                <input asp-for="Diachi" class="form-control" required />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Mataikhoan" class="control-label"></label>
                <input asp-for="Mataikhoan" class="form-control" value="@ViewBag.Mataikhoan" />
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
