@model SHOPTHL.Data.Khachhang
@{
    ViewData["Title"] = "ViewProfile";
    Layout = "~/Views/Shared/ProfileUser.cshtml";
}

<div class="container">
    <h1>Hồ sơ của tôi</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tenkh)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>

<div class="container mt-3">
    <!-- Added mt-3 for margin top -->
    <a asp-action="Edit" asp-route-id="@Model?.Makh" class="btn btn-primary">Chỉnh sửa</a>
</div>
<div style=" min-height:100px;" class="hero-header"></div>